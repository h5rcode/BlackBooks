<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/bookDisplay_textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/bookDisplay_textSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" />

        <ImageView
            android:id="@+id/bookDisplay_imageCover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5sp"
            android:background="@color/grey_400"
            android:contentDescription="@string/image_thumbnail"
            android:padding="5sp"
            android:src="@drawable/ic_undefined_thumbnail" />

        <TextView
            android:id="@+id/bookDisplay_textAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/bookDisplay_groupInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                style="@style/HorizontalDivider"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingRight="15sp" >

                    <LinearLayout
                        android:id="@+id/bookDisplay_groupInfoUserFriendly_pageCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/label_page_count"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/bookDisplay_textPageCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bookDisplay_groupInfoUserFriendly_categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="15sp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/label_categories"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/bookDisplay_textCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bookDisplay_groupInfoUserFriendly_language"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="15sp" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/label_language"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/bookDisplay_textLanguage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/bookDisplay_groupInfoTechnical_publisher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_publisher"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/bookDisplay_textPublisher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bookDisplay_groupInfoTechnical_publishedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/label_published_date"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/bookDisplay_textPublishedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bookDisplay_groupInfoTechnical_isbn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/label_isbn"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/bookDisplay_textIsbn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bookDisplay_groupDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View
                style="@style/HorizontalDivider"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="5sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/label_description"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/bookDisplay_textDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>