<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="1sp"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="1sp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <ProgressBar
            android:id="@+id/books_by_loaned_item_book_progressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/books_by_loaned_item_book_small_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_thumbnail"
            android:src="@drawable/ic_undefined_thumbnail"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical"
        android:padding="5sp" >

        <TextView
            android:id="@+id/books_by_loaned_item_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/books_by_loaned_item_book_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/books_by_loaned_item_book_imageRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/label_read"
            android:scaleType="center"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:src="@drawable/ic_read" />

        <ImageView
            android:id="@+id/books_by_loaned_item_book_imageFavourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/label_read"
            android:scaleType="center"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:src="@drawable/ic_favourite" />

        <ImageView
            android:id="@+id/books_by_loaned_item_book_imageLoaned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/label_loaned_to"
            android:scaleType="center"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:src="@drawable/ic_loaned" />
    </LinearLayout>

</LinearLayout>